# Taiwan Futures Backtesting Configuration
# Copy this file to .env and customize as needed

# ============================================
# Data Directories
# ============================================
# Override default data directory (optional)
# TX_DATA_DIR=./data

# Override default output directory (optional)
# TX_OUTPUT_DIR=./output

# ============================================
# Default Backtest Parameters
# ============================================
# Counting period: weekly or monthly
DEFAULT_COUNTING_PERIOD=weekly

# Opening price calculation: standard or night
DEFAULT_OPENING_CALC=standard

# Previous close calculation: standard, night, or settlement_open
DEFAULT_PREV_CLOSE_CALC=standard

# ============================================
# Date Range
# ============================================
# Default start date for backtests
START_DATE=2017-05-16

# Default end date for backtests
END_DATE=2024-12-31

# ============================================
# Logging Configuration
# ============================================
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Enable file logging: true or false
LOG_TO_FILE=false

# Log directory (if file logging enabled)
LOG_DIR=logs

# ============================================
# Performance Settings
# ============================================
# Generate plots by default: true or false
GENERATE_PLOTS=true

# Generate markdown reports by default: true or false
GENERATE_MARKDOWN=true

# ============================================
# TXO Max Pain Settings
# ============================================
# Max pain start date
MAXPAIN_START_DATE=2017-01-01

# Max pain end date
MAXPAIN_END_DATE=2024-12-31

# ============================================
# Development Settings
# ============================================
# Enable debug mode: true or false
DEBUG_MODE=false

# Show verbose output: true or false
VERBOSE=false
